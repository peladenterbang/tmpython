# Forex Risk Manager - Environment Variables
# Copy this file to .env and fill in the values

# ===========================================
# FLASK CONFIGURATION
# ===========================================
SECRET_KEY=
FLASK_ENV=production

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Options: sqlite, mysql
DB_TYPE=sqlite

# MySQL Settings (only if DB_TYPE=mysql)
MYSQL_HOST=
MYSQL_DATABASE=
MYSQL_USER=
MYSQL_PASSWORD=

# ===========================================
# SITE CONFIGURATION
# ===========================================
# Your production domain (without trailing slash)
SITE_URL=

# ===========================================
# EMAIL CONFIGURATION (SMTP)
# ===========================================
EMAIL_ENABLED=false
SMTP_HOST=smtp.zoho.com
SMTP_PORT=587
SMTP_EMAIL=
SMTP_PASSWORD=
SMTP_SENDER_NAME=Forex Risk Manager

# ===========================================
# MIDTRANS PAYMENT GATEWAY
# ===========================================
# Get keys from https://dashboard.midtrans.com
MIDTRANS_SERVER_KEY=
MIDTRANS_CLIENT_KEY=
MIDTRANS_IS_PRODUCTION=false

# ===========================================
# EXCHANGE RATE
# ===========================================
USE_LIVE_EXCHANGE_RATE=true
USD_TO_IDR_RATE=15500

# ===========================================
# TELEGRAM (Optional)
# ===========================================
# Users configure their own bot in settings
# These are defaults if needed
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
